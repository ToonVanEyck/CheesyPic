[Unit]
Description="CheesyPic Photobooth Service"
After=network.target

[Service]
Environment="DISPLAY=:0"
Environment="XAUTHORITY=/home/pi/.Xauthority"
ExecStart=/home/pi/cheesypic_photobooth/build/photobooth
WorkingDirectory=/home/pi/cheesypic_photobooth/build
StandardOutput=journal
StandardError=journal
Restart=always
User=pi

[Install]
WantedBy=graphical.target
